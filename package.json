{
  "name": "shape",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "description": "Infer schema from JavaScript data objects",
  "author": "Phil Eaton",
  "main": "./dist/index.js",
  "types": "./dist/shape.d.ts",
  "scripts": {
    "typecheck": "yarn tsc",
    "format": "yarn prettier --write \"**/*.js\" \"**/*.ts\" \"**/*.json\"",
    "test": "yarn jest",
    "build": "yarn esbuild --platform=node --bundle --minify --target=esnext shape.ts --sourcemap --outfile=dist/index.js",
    "test-coverage": "yarn jest --coverage"
  },
  "devDependencies": {
    "esbuild": "^0.12.7",
    "esbuild-jest": "^0.5.0",
    "jest": "^27.0.6",
    "prettier": "^2.3.0",
    "typescript": "^4.4.0-beta"
  }
}
